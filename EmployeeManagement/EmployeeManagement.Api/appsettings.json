{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "Path": "wwwroot/logs/log-.log",
          "RollingInterval": "Day",
          "RollOnFileSizeLimit": true,
          "RetainedFileCountLimit": 30
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
